generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid()) @map("id") @db.VarChar(30)
  email    String  @unique @db.VarChar(255)
  password String  @db.VarChar(255)
  name     String  @db.VarChar(50)
  avatar   String? @db.VarChar(500)
  isGuest  Boolean @default(false) @map("is_guest")

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(3)

  ownedBoards      Board[]       @relation("BoardOwner")
  boardMemberships BoardMember[]
  assignedCards    Card[]        @relation("CardAssignee")

  @@map("users")
}

model Board {
  id              String @id @default(cuid()) @map("id") @db.VarChar(30)
  title           String @db.VarChar(100)
  backgroundColor String @default("#0079BF") @map("background_color") @db.VarChar(7)
  ownerId         String @map("owner_id") @db.VarChar(30)

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(3)

  owner   User         @relation("BoardOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  lists   List[]
  members BoardMember[]
  labels  Label[]

  @@index([ownerId])
  @@index([updatedAt])
  @@map("boards")
}

model BoardMember {
  id      String @id @default(cuid()) @map("id") @db.VarChar(30)
  boardId String @map("board_id") @db.VarChar(30)
  userId  String @map("user_id") @db.VarChar(30)
  role    String @default("member") @db.VarChar(20)

  lastAccessedAt DateTime? @map("last_accessed_at") @db.Timestamptz(3)
  joinedAt       DateTime  @default(now()) @map("joined_at") @db.Timestamptz(3)

  board Board @relation(fields: [boardId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([boardId, userId])
  @@index([userId])
  @@index([lastAccessedAt])
  @@map("board_members")
}

model List {
  id       String @id @default(cuid()) @map("id") @db.VarChar(30)
  title    String @db.VarChar(50)
  position Int    @default(0)
  boardId  String @map("board_id") @db.VarChar(30)

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(3)

  board Board @relation(fields: [boardId], references: [id], onDelete: Cascade)
  cards Card[]

  @@index([boardId])
  @@index([boardId, position])
  @@map("lists")
}

model Card {
  id          String  @id @default(cuid()) @map("id") @db.VarChar(30)
  title       String  @db.VarChar(200)
  description String? @db.Text
  position    Int     @default(0)
  listId      String  @map("list_id") @db.VarChar(30)
  assigneeId  String? @map("assignee_id") @db.VarChar(30)

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(3)

  list     List        @relation(fields: [listId], references: [id], onDelete: Cascade)
  assignee User?       @relation("CardAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)
  labels   CardLabel[]

  @@index([listId])
  @@index([listId, position])
  @@index([assigneeId])
  @@map("cards")
}

model Label {
  id      String @id @default(cuid()) @map("id") @db.VarChar(30)
  name    String @db.VarChar(30)
  color   String @db.VarChar(7)
  boardId String @map("board_id") @db.VarChar(30)

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(3)

  board Board       @relation(fields: [boardId], references: [id], onDelete: Cascade)
  cards CardLabel[]

  @@index([boardId])
  @@map("labels")
}

model CardLabel {
  id      String @id @default(cuid()) @map("id") @db.VarChar(30)
  cardId  String @map("card_id") @db.VarChar(30)
  labelId String @map("label_id") @db.VarChar(30)

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(3)

  card  Card  @relation(fields: [cardId], references: [id], onDelete: Cascade)
  label Label @relation(fields: [labelId], references: [id], onDelete: Cascade)

  @@unique([cardId, labelId])
  @@index([labelId])
  @@map("card_labels")
}
